<h1 class="text-center", style="font-family: Allan; font-style: italic">Your Jobs</h1>

<% if @jobs.empty? %>
  <div class="text-center" style="margin: 40px">
    <h4 style="font-family: Allan; font-style: italic">You are currently not providing any jobs! </h4>
    <h4 style="font-family: Allan; font-style: italic">Create your first job!</h4>
    <button class="btn-hire text-center" style="margin: 20px"><%= link_to "Add a new job", new_provider_job_path %></button>
  </div>
<% else %>
  <div class="container">
  <div class="row justify-content-between">
    <% @jobs.each do |job| %>
         <div class="card-profession col-3 p-4">
            <div class="img mx-auto">
                <%= cl_image_tag(job.photo.key, style: 'width:210px;height:150px;', class: 'rounded-4') %>
            </div>
            <div class="m-2">
              <h2><%= job.name %></h2>
              <p><%= job.price.to_i %> JPY</p>
            </div>

            <div class="m-2">
              <h5><%= job.location %></h5>
            </div>
            <div class="card-profession-info border rounded-4 px-4 m-3" style="height: 170px">
              <p class="text-center my-auto"><%= job.description %></p>
            </div>
            <div class="d-grid m-2">
              <%= link_to "Delete this service", provider_job_path(job), class: "btn btn-hire", id: "delete-btn",
                 data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
          </div>
    <% end %>
    <div class="text-center" style="margin: 40px">
    <%= link_to "Add a new Job", new_provider_job_path, class: "btn-hire text-center" %>
  </div>
  </div>
</div>
<% end %>

