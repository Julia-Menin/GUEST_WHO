<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: jobs_path, method: :get, class: "d-flex my-3" do %>
      <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Bridesmaid"
        %>
      <%= submit_tag "Search", name: "", class: "btn-hire" %>
    <% end %>
    </div>
  </div>

<div>

<center><h1 style="font-family: Allan; font-style: italic">Hire your Guest!</h1></center>
</div>
<div>
<center><p>For your fantastic wedding!</p></center></div>

<div class="container">
  <div class="row justify-content-between">
    <% @jobs.each do |job| %>
         <div class="card-profession col-3 p-4">
            <div class="img mx-auto">
              <%= cl_image_tag(job.photo.key, style: 'width:210px;height:150px;', class: 'rounded-4') %>
            </div>
            <div class="m-2">
              <h2><%= job.name %></h2>
              <p><%= job.price.to_i %> JPY</p>
            </div>

            <div class="m-2">
              <h5><%= job.location %></h5>
            </div>
            <div class="m-2">
              <%= User.find(job.user_id).first_name %>
            </div>
            <div class="card-profession-info border rounded-4 px-4 m-3" style="height: 140px">
              <p class="text-center my-auto"><%= job.description %></p>
            </div>
            <div class="d-grid m-2">
              <%= link_to "Make a Reservation", user_signed_in? ? job_path(job) : new_user_session_path, class: "btn-hire text-center" %>
            </div>
          </div>
    <% end %>
  </div>
</div>

