<h1 style="font-family: Allan; font-style: italic" class="one_job text-center">Hey <%= current_user.first_name %>, Complete your wedding party!</h1>
<div class="d-flex flex-row justify-content-center">
  <div class="form-background col-8 border border-5 rounded-4 p-5 ">
    <div class="d-flex">
      <div class="col-8">
        <div class="icon-container">
          <h2 > <%=@job.name%>  </h2>
          <h5> <i class="fa-solid fa-location-dot"></i> <%= @job.location %>
          <i class="fa-solid fa-money-bill" class="one_job"> </i> Â¥<%= @job.price.to_i %>/day </h5>
        </div>
        <div class="image-container">
          <%= cl_image_tag(@job.photo.key, alt: "Bridesmaid", class: "rounded-4 pics")  %> 
        </div>
      </div>
      <div class="d-flex col-4 flex-column justify-content-between">
        <div class="mt-5">
            <h2>Description:</h2>
            <p><%=@job.description %></p>
        </div>
        <% if @job.user != current_user %>
          <div class="border border-2 p-4 rounded-4">
              <%= render "shared/form" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="nav justify-content-center m-5">
  <%= link_to "Back to the List", jobs_path, class: "btn-hire" %>
</div>
